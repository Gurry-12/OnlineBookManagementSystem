<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin - My Book Shelf</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="sidebar" id="sidebar">
        <div class="d-flex justify-content-end">
            <button id="toggleSidebar" class="btn btn-transparent border-0 text-light my-3">
                <i class="bi bi-list"></i>
            </button>
        </div>
        <div class="container-fluid p-3 mx-auto w-75 bg-white shadow rounded-3 logo-card">
            <img src="~/images/render_website_name.png" alt="Logo" class="img-fluid logo-img">
            
        </div>

        <!-- Sidebar links with icons -->
        <a id="homeLink" href="#">
            <i class="bi bi-house-door"></i>
            <span class="sidebar-text"> Books</span>
        </a>
        <a asp-controller="Category" asp-action="DisplayCategory">
            <i class="bi bi-search"></i>
            <span class="sidebar-text">Category</span>
        </a>
        <a asp-controller="Books" asp-action="CreateBookData">
            <i class="bi bi-book"></i>
            <span class="sidebar-text"> Add Book</span>
        </a><br />
        <hr />
        <a asp-controller="Home" asp-action="About">
            <i class="bi bi-info-circle"></i>
            <span class="sidebar-text"> About</span>
        </a>
        <a asp-controller="Home" asp-action="Support">
            <i class="bi bi-telephone"></i>
            <span class="sidebar-text"> Support</span>
        </a>
        <a asp-controller="Home" asp-action="Terms">
            <i class="bi bi-file-earmark-text"></i>
            <span class="sidebar-text"> Terms & Condition</span>
        </a>
    </div>

    <div class="content">
        <div class="top-bar gap-3">
            <span> <i class="bi bi-clock"></i> <span class="currenttime"> </span> </span>
            <span><i class="bi bi-calendar"></i> <span class="currentdate"> </span> </span>
            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="username">
                    <i class="bi bi-person-circle"></i>
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="ProfileView">Profile</a></li>
                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Logout</a></li>
                </ul>
            </div>
        </div>
        @RenderBody() <!-- The section where the page content will be injected -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false) <!-- For additional scripts -->
</body>
</html>
