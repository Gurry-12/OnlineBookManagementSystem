<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Book Shelf</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: #f5f6fb;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            background: linear-gradient(to bottom, #ff5e62, #ff9966);
            color: #fff;
            height: 100vh;
            position: fixed;
            width: 220px;
            padding: 1rem;
        }

            .sidebar a {
                color: #fff;
                text-decoration: none;
                margin: 1rem 0;
                display: block;
            }

                .sidebar a:hover {
                    color: #ffe;
                }

        .content {
            margin-left: 240px;
            padding: 2rem;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="container-fluid p-3 mx-auto w-75  bg-white shadow rounded-3">
            <img src="/images/image.png" alt="Logo" class="img-fluid  ">
        </div>

        <a asp-controller="Books" asp-action="Index"><i class="bi bi-house-door"></i> Home</a>
        <a asp-controller="Category" asp-action="DisplayCategory"><i class="bi bi-search"></i> Category</a>
        <a asp-controller="Books" asp-action="CreateBookData"><i class="bi bi-book"></i> Add Book</a>
        <a asp-controller="Contribute" asp-action="Index"><i class="bi bi-pencil-square"></i> Contribute</a>
        <hr />
        <a asp-controller="Home" asp-action="About">About</a>
        <a asp-controller="Support" asp-action="Index">Support</a>
        <a asp-controller="Home" asp-action="Terms">Terms & Condition</a>
    </div>


    <div class="content">

        <div class="top-bar">
            <div class="d-flex gap-2">
                <select class="form-select w-auto">
                    <option>All</option>
                </select>
                <input type="text" class="form-control" placeholder="Search">
                <button class="btn btn-light"><i class="bi bi-search"></i></button>
                <select class="form-select w-auto"> <option>Lang</option> </select>
            </div>
            <div class="d-flex align-items-center gap-3">
                <span><i class="bi bi-clock"></i> 09:00 AM</span>
                <span><i class="bi bi-calendar"></i> 4-Mar-2023</span>
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="username">
                        <i class="bi bi-person-circle"></i> 
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">Profile</a></li>
                        <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>

        @RenderBody()
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
