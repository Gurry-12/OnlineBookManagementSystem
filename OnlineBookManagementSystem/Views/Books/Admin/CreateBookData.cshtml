@using OnlineBookManagementSystem.Models.ViewModel
@{
    ViewData["Title"] = "Add Book";
    //   Layout = "_LayoutMain";
}
@model BookFormViewModel;


<div class="container my-4">
    <div class="card p-4 shadow-sm">
       @if(Model == null){
        <h3 class="mb-3 text-primary" >Add a New Book</h3>
       } else {
        <h3 class="mb-3 text-primary" >Update Book</h3>
       }


        <form id="addBookForm">
            <input type="number" asp-for="Book.Id" class="form-control " name="Id" hidden/>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Title</label>
                    <input type="text" asp-for="Book.Title" class="form-control" name="Title" required />
                    <span asp-validation-for="Book.Title" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Author</label>
                    <input type="text" asp-for="Book.Author" class="form-control" name="Author" required />
                    <span asp-validation-for="Book.Author" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Price</label>
                    <input type="number" asp-for="Book.Price" class="form-control" name="Price" required />
                    <span asp-validation-for="Book.Price" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">ISBN</label>
                    <input type="text" asp-for="Book.Isbn" class="form-control" name="Isbn" required />
                    <span asp-validation-for="Book.Isbn" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Stock</label>
                    <input type="number" asp-for="Book.Stock" class="form-control" name="Stock" required />
                    <span asp-validation-for="Book.Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-8">
                    <label class="form-label">Cover Image URL</label>
                    <input type="url" asp-for="Book.ImgUrl" name="ImgUrl" class="form-control" />
                    <span asp-validation-for="Book.ImgUrl" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Category</label>
                    <select asp-for="Book.CategoryId" asp-items="Model.CategoryList" class="form-control">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Book.CategoryId" class="text-danger"></span>
                </div>

            </div>

            <div class="text-end">
                @if (Model == null)
                {
                    <button type="button" onclick="SubmitData(event)" class="btn btn-primary px-4">Add Book</button>
                }
                else
                {
                    <button type="button" onclick="UpdateData(event)" class="btn btn-primary px-4">Update Book</button>


                }
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="~/js/books/bookshome.js"></script>