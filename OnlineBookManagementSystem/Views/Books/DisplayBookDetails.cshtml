@model OnlineBookManagementSystem.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="row mt-4">
    <!-- Book Cover -->
    <div class="col-md-3 text-center">
        <img src="@Url.Content(Model.ImgUrl ?? "~/images/books/default.jpg")" alt="Book Cover" class="img-fluid mb-3" style="max-height: 300px;" />
        <div class="d-flex justify-content-around">
            <button class="btn btn-outline-secondary btn-sm">Review</button>
            <button class="btn btn-outline-secondary btn-sm">Notes</button>
            <button class="btn btn-outline-secondary btn-sm">Share</button>
        </div>
    </div>

    <!-- Book Info -->
    <div class="col-md-6">
        <h2>@Model.Title</h2>
        <p>By <strong>@Model.Author</strong></p>
        <p><strong>ISBN:</strong> @Model.Isbn</p>
        <p><strong>Price:</strong> ₹@Model.Price?.ToString("0.00")</p>
        <p><strong>Stock Status:</strong> <span class="badge bg-success">@Model.Stock</span></p>

        <div class="d-flex gap-2">
            <button class="btn btn-warning">Borrow</button>
            <button class="btn btn-success">Read Now <i class="bi bi-play-circle ms-1"></i></button>
            <button class="btn btn-outline-primary">Add to List</button>
        </div>
    </div>

    <!-- Author Info (Placeholder for now) -->
    <div class="col-md-3">
        <div class="card p-3">
            <h5>About Author</h5>
            <p>@Model.Author is an author of several books in this collection.</p>

            <h6>Other Books</h6>
            <img src="~/images/books/sample.jpg" alt="Other Book" class="img-thumbnail" style="max-width: 80px;" />
        </div>
    </div>
</div>

<!-- Extra Details -->
<div class="mt-5">
    <ul class="nav nav-tabs">
        <li class="nav-item"><a class="nav-link active" href="#">Overview</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Details</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Reviews</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Lists</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Related Books</a></li>
    </ul>

    <div class="p-3 bg-light">
        <h6>ISBN: @Model.Isbn</h6>
        <h6>Price: ₹@Model.Price</h6>
        <h6>Stock: @Model.Stock</h6>
    </div>
</div>
