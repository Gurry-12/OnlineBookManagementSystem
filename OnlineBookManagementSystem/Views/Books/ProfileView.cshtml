@model OnlineBookManagementSystem.Models.User

@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-4 rounded-4">
                <div class="row">
                    <!-- Profile Image -->
                    <div class="col-md-4 text-center">
                        @* <img src="~/images/default-profile.png" *@
                        @*      class="img-fluid rounded-circle mb-3 shadow-sm" *@
                        @*      alt="Profile Picture" *@
                        @*      style="width: 150px; height: 150px; object-fit: cover;" /> *@
                        <span class="badge bg-info text-dark">@Model.Role</span>
                    </div>

                    <!-- User Info -->
                    <div class="col-md-8">
                        <h3 class="fw-bold">@Model.Name</h3>
                        <p class="text-muted">@Model.Email</p>

                        <hr />

                        <p><strong>User ID:</strong> @Model.Id</p>
                        <p><strong>Orders Placed:</strong> @Model.Orders.Count()</p>
                        <p><strong>Items in Cart:</strong> @Model.ShoppingCarts.Count()</p>

                        <a href="#" class="btn btn-outline-primary mt-3">Edit Profile</a>
                        <a href="#" class="btn btn-outline-danger mt-3 ms-2">Change Password</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
