@using OnlineBookManagementSystem.Models.ViewModel.AuthViewModels
@model ForgotPasswordViewModel;
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="text-center mb-4">
            <img src="~/images/render_website_name.png" class="img-fluid" style="max-width: 100px;" alt="Logo" />
            <h2 class="mt-3 fw-semibold text-primary">Forgot Password</h2>
        </div>

        <form asp-action="ForgotPassword" method="POST">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-2">Send Reset Link</button>

            <div class="text-center mt-3">
                <a asp-action="Login" class="login-link">Back to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
