@model IEnumerable<OnlineBookManagementSystem.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}


<div class="container py-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">📜 My Orders</h4>
        </div>
        <div class="card-body">

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                               
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Order Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                   
                                    <td>₹@order.TotalAmount</td>
                                    <td>
                                        <span class="badge
                                            @(order.Status == "Pending" ? "bg-warning text-dark" :
                                              order.Status == "Completed" ? "bg-success" :
                                              order.Status == "Cancelled" ? "bg-danger" :
                                              "bg-secondary")">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td>@order.OrderDate</td>
                                    <td>
                                        <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-outline-info btn-sm">
                                            View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted text-center">You haven't placed any orders yet.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/books/bookshome.js"></script>
}
